  <select id="selectBengBuPayRollInfo" resultType="com.quanroon.atten.reports.entity.dto.UpBengbuPayRollDTO">
      SELECT
        a.id,
        b.id as 'payId',
        b.proj_id as 'projId',
        uci.corp_code as 'corpCode',
        w.`name`,
        w.card_no as 'cardNo',
        wi.salary_money as 'salaryMoney',
        a.attendance_days as 'attendanceDays',
        a.payable_money as 'payableMoney',
        a.paid_money  as 'paidMoney',
        wi.salary_bank_no as 'salaryBankNo',
        wi.salary_bank  as 'salaryBank',
        c.report_code as 'projNo',
        e.report_code as 'groupNo',
        w.name as 'accountName',
        (
        case when a.reissue_month is null then b.grant_salary_date
        ELSE
        a.reissue_month
        end
        ) as 'businessDate'
    FROM
        up_payroll_detail_info a
    LEFT JOIN up_payroll_info b on b.id = a.salary_id
    LEFT JOIN up_project_info c on c.id = b.proj_id
    LEFT JOIN up_company_info uci on uci.id = b.company_id
    LEFT JOIN up_group_info e on e.id = b.group_id
    LEFT JOIN up_worker_info  w on w.id = a.worker_id
    LEFT JOIN up_worker_in wi on wi.worker_id = w.id
    where
     a.id = #{id}
  </select>

